{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Tauri C# React App",
  "version": "1.0.0",
  "identifier": "com.example.tauri-csharp-app",
  "build": {
    "beforeDevCommand": "cd ../Server && dotnet run -- 5000",
    "beforeBuildCommand": "cd ../frontend && npm run build && cd ../Server && dotnet build",
    "frontendDist": "../../frontend/dist",
    "devUrl": "http://localhost:5000"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri C# React App",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}